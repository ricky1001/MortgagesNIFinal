<!--Modal -->

<!-- Modal To Book Call Back-->
<div class="modal fade" id="book-call-back-btn" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookCallBackModalLabel">Book a Call Back</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form action="/book-call-back" method="POST">
         
        <!--Select Menu Pre Populated with the following 3 days  -->
        <div class="form-group">
          <select id="pickCallBackDay" name="callBackDay" class="custom-select">
            <option value="<%=quickCallHelpers.dayStrings.todayString%>">
              <%=quickCallHelpers.dayStrings.todayString%>
            </option>
            <option value="<%=quickCallHelpers.dayStrings.tomorrowString%>">
              <%=quickCallHelpers.dayStrings.tomorrowString%>
            </option>
            <option value="<%=quickCallHelpers.dayStrings.nextDayString%>">
              <%=quickCallHelpers.dayStrings.nextDayString%>
            </option>
          </select>
        </div>

        <div class="form-group" id="callListOption">
          <select id="pickATime" name="callBackTime" class="custom-select">
                <% quickCallHelpers.adjustedTimes.forEach(function(item){ %>
                <option class="pickATimeOption" value="<%=item%>"><%=item%></option>
              <%})%>
          </select>
        </div>

        <div class="form-group">
          <label for="firstName">First Name</label>
          <input type="text" name="firstName" class="form-control" id="firstName" placeholder="firstName">
        </div>

        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input type="text" name="lastName" class="form-control" id="lastName" placeholder="lastName">
        </div>

        <div class="form-group">
          <label for="contactNumber">Contact Number</label>
          <input type="text" name="contactNumber" class="form-control" id="contactNumberCallBack" placeholder="Contact Number">
        </div>

        <div class="form-group">
          <label for="emailBookingForm">Email address</label>
          <input type="email" name="emailCallBack" class="form-control" id="emailCallBack" placeholder="name@example.com">
        </div>
        <button id="aipBooked" type="submit" class="btn btn-primary"
        onclick="dataLayer.push({
          'AdvertCallBackBooked': 'Call back booked'
        })">
        Book Call Back
      </button>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        
      </div>
    </div>
  </div>
