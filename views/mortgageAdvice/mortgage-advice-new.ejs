<h3>
  Create a new Mortgage Advice Post
</h3>

<div class="container">
  <div class="row">
     <div class="col">
        <form action="/mortgage-advice-post" method="POST">
          
          <!-- <div class="form-group">
              <input type="text" class="form-control " placeholder="Custom URL" name="mortgageAdvice[_id]">
           </div> -->
  
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Image URL" name="mortgageAdvice[image]">
           </div>
           
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Post Title" name="mortgageAdvice[title]">
           </div>
          
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Meta Title" name="mortgageAdvice[metatitle]">
           </div>
          
            <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Meta Description" name="mortgageAdvice[metadescription]">
           </div>
  
           <div class="form-group">
             <textarea rows="10" class="form-control form-control-lg" placeholder="Content" name="mortgageAdvice[content]"> </textarea>
           </div>
  
           <button type="submit" class="btn btn-lg btn-outline-primary">Submit</button>
  
</form>
     </div>
  </div>
</div>



