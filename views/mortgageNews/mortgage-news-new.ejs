<% include ../partials/head-tags %>
<% include ../partials/main-menu %>


<div class="container"> 
 <div class="rows">
   <div class="col">  
         <h3>
           Create a new Mortgage News Post
         </h3>

     <form action="/mortgage-news-post" method="POST">
       
           <div class="form-group">
              <input type="text" class="form-control " placeholder="Custom URL" name="mortgageNews[_id]">
           </div>
  
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Image URL" name="mortgageNews[image]">
           </div>
           
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Post Title" name="mortgageNews[title]">
           </div>
       
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Meta Title" name="mortgageNews[metatitle]">
           </div>
       
             <div class="form-group">
             <input type="text" class="form-control form-control-lg" placeholder="Meta Description" name="mortgageNews[metadescription]">
           </div>
           
           <div class="form-group">
             <textarea rows="10" class="form-control form-control-lg" placeholder="Post Content" name="mortgageNews[content]"></textarea>
           </div>

  
           <button class="btn btn-outline-primary" type="submit">Submit</button>
  
         </form>
     
   </div>
  </div>
</div>



