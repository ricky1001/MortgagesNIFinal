<% include ../partials/head-tags %>
<% include ../partials/main-menu %>


<div class="container"> 
 <div class="rows">
   <div class="col">  
         <h3>
           Create a new Mortgage News Post
         </h3>

     
        <form action="/mortgage-news/<%= newsPost._id%>/?_method=PUT" method="POST">
  
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" value="<%=newsPost.image%>" name="mortgageNews[image]">
           </div>
           
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" value="<%=newsPost.title%>" name="mortgageNews[title]">
           </div>
       
           <div class="form-group">
             <input type="text" class="form-control form-control-lg" value="<%=newsPost.metatitle%>" name="mortgageNews[metatitle]">
           </div>
       
             <div class="form-group">
             <input type="text" class="form-control form-control-lg" value="<%=newsPost.metadescription%>" name="mortgageNews[metadescription]">
           </div>
           
           <div class="form-group">
             <textarea rows="10" class="form-control form-control-lg"  name="mortgageNews[content]"><%=newsPost.content%></textarea>
           </div>

  
           <button class="btn btn-outline-primary" type="submit">Submit</button>
  
         </form>
     
   </div>
  </div>
</div>
<% include ../partials/footer %>