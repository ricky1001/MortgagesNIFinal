<% include ../partials/head-tags %>
<% include ../partials/main-menu %>

<section id="mortgageNewsHead">
 <div class="container">
  <div class="row">
    <div class="col-lg-8  col-md-12 mt-3">
      <h4>
        Most Recent Mortgage News in Northern Ireland 
      </h4>
      <p>
        The Latest Mortgage News Posts written by front line Mortgage Brokers in Northern Ireland
      </p>
         <% mtPost.forEach(function(mPost){ %>
      <div class="row container indexPageBox">
      <div class="col"> <h5><%=mPost.title%></h5></div>
      

      <div class="row container ml-1 mr-1 indexPageBox">
                  
           <div class="col-lg-6 container mt-3">
             
           <img class="img-fluid" height="200px" src="<%= mPost.image %>" alt="">
           </div>
           <div class="col-lg-6">     
            <p class="text-justify">
             <%- mPost.content.substring(0, 211) %>
              <br><br>
            <a class="btn btn-sm btn-outline-primary btn-block" href="/mortgage-types/<%= mPost._id %>">Read More</a>  
            </p>
           </div>
           
         </div>
      </div>
   <%   }) %>
    
    
   </div>
   <div class="col-lg-4 col-md-12">
    <h5 class="quick-enquiry"><strong>Quick Enquiry</strong></h5>
    <div class="container form-container">
      
       <div class="form enquiry-form">
         <div class="container pt-2 pb-2">
           <form action="enquiry-new" method="POST">
               <div class="form-group">
                 <input type="text" class="form-control" placeholder="Your Name" name="enquiry[name]">
               </div>
             
               <div class="form-group">
                 <input type="text" class="form-control" placeholder="Post Code" name="enquiry[postcode]">
               </div> 

               <div class="form-group">
                 <input type="text" class="form-control" placeholder="Your e-mail" name="enquiry[email]">
               </div>              
       
              <div class="form-group">
                 <input type="text" class="form-control" placeholder="Contact Number" name="enquiry[contactNumber]">
               </div>

               <div class="form-group">
              <textarea rows="5" class="form-control" placeholder="Your Message" name="enquiry[content]"></textarea>
               </div>
               <input type="submit" value="submit" class="btn btn-block enquiry-form-button">
             </form>
          </div>
         </div>
    </div>
         </div>
        </div>
       </div>
      </div>
     </div>
</section>


<% include ../partials/footer %>



